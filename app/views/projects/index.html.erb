<div class="row">
  <div class="col-md-6 col-md-offset-3" id="project_list" >
    <%= render @projects %>
  </div>
</div>

<%= form_for @project, remote: true do |f| %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="input-group input-group-lg">
      <%= f.text_field :name, placeholder: "Enter Project name", autofocus: true, class: "form-control", required: true %>
      <div class="input-group-btn">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>

