<div class="panel panel-primary">
  <div class="panel-heading">
    <div class="div-project-name">
      <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>&nbsp;
      <%= project.name %>
    </div>
    <div class="div-project-options" style="color: #fff">
      <%= link_to 'javascript:void(0)' do %>
        <span class="glyphicon glyphicon-resize-vertical"></span>
      <% end %>
      <%= link_to 'javascript:void(0)', id: "edit_project_#{project.id}" do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>
      <%= link_to project_path(project), method: :delete, remote: true,
                                        data: { confirm: "Are you sure?" },
                                        id: "delete_project_#{project.id}" do%>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    </div> 
  </div>
</div> 